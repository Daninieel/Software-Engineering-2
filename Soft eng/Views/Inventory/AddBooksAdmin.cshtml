@{
    ViewBag.Title = "AddBooks Admin";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Library Management System - Add Book</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/addbooks.css">
    <link rel="stylesheet" href="~/css/chatbot.css">
    <link rel="stylesheet" href="~/css/mobile.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/tesseract.js@5/dist/tesseract.min.js"></script>
</head>
<body>

    <header class="top-header">
        <div class="logo-area">
            <button class="hamburger-btn" id="hamburgerBtn">
                <span></span>
                <span></span>
                <span></span>
            </button>
            <div class="logo-circle">
                <img src="~/images/school_logo.jpg" alt="SIA Logo">
          </div>
            <a href="/dashboard/Dashboard" style="text-decoration: none; color: white;">
                <span class="school-name">SAINT ISIDORE ACADEMY</span>
            </a>
        </div>

        <div class="user-area">
            <div class="welcome-text" id="welcomeText"></div>
            <div class="user-avatar">
                <img src="https://cdn-icons-png.flaticon.com/512/1946/1946429.png" alt="Admin Avatar">
            </div>
        </div>
    </header>

    <div class="main-layout">
   <aside class="sidebar" id="sidebar">
    <nav>
        <ul>
            <li class="@(ViewBag.Title == "Admin Dashboard" ? "active" : "")">
                <a asp-controller="Dashboard" asp-action="AdminDashboard">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>
            </li>

            <li class="@(ViewBag.Title == "Inventory Admin" ? "active" : "")">
                <a asp-controller="Inventory" asp-action="Inventory" asp-route-fromAdmin="true">
                    <i class="fas fa-book"></i> Logbook
                </a>
            </li>

            <li class="dropdown-item">
                <a href="javascript:void(0)" class="dropdown-toggle" id="bookManagementBtnLib">
                    <i class="fas fa-layer-group"></i> Book Management
                    <i class="fas fa-chevron-down arrow-icon"></i>
                </a>
                <ul class="submenu" id="bookManagementSubmenuLib">
                    <li><a asp-controller="Inventory" asp-action="AddBooksAdmin"><i class="fas fa-plus"></i> Add Books</a></li>
                    <li><a asp-controller="Loan" asp-action="BorrowedBooksAdmin"><i class="fas fa-book-reader"></i> Borrowed Books</a></li>
                    <li><a asp-controller="Request" asp-action="RequestedBooksAdmin"><i class="fas fa-bookmark"></i> Requested Books</a></li>
                    <li><a asp-controller="Inventory" asp-action="ArchivedBooksAdmin"><i class="fas fa-archive"></i> Archived Books</a></li>
                </ul>
            </li>

            <li class="@(ViewBag.Title == "Fine Admin" || ViewBag.Title == "Fine" ? "active" : "")">
                <a asp-controller="Loan" asp-action="FineAdmin">
                    <i class="fas fa-money-bill-wave"></i> Fine
                </a>
            </li>

            <li>
                <form asp-action="Logout" asp-controller="Account" method="post" id="logoutForm" style="display:inline;">
                    <a href="javascript:void(0);" onclick="showLogoutModal();" class="logout-link">
                        <i class="fas fa-sign-out-alt"></i>
                        <span class="logout-text">Log Out</span>
                    </a>
                </form>
            </li>
        </ul>
    </nav>
</aside>

        <div class="sidebar-overlay" id="sidebarOverlay"></div>
        <main class="content-area page-content">
            <h2>Add Book</h2>

            <div class="form-card">
                <form asp-action="AddBooks" method="post" id="addBookForm">

                    <div class="form-group full-width">
                        <label>Book Title</label>
                        <input type="text" name="BookTitle" required>
                    </div>

                    <div class="form-grid-row">
                        <div class="form-group">
                            <label>Author</label>
                            <input type="text" name="Author" required>
                        </div>
                        <div class="form-group">
                            <label>Pages</label>
                            <input type="number" name="Pages" id="pagesInput" min="1" required>
                        </div>
                    </div>

                    <div class="form-grid-row">
                        <div class="form-group">
                            <label>Edition</label>
                            <input type="text" name="Edition" placeholder="1st/2021" required>
                        </div>
                        <div class="form-group">
                            <label>Year</label>
                            <input type="text" name="Year" placeholder="YYYY/MM/DD" onfocus="(this.type='date')" required>
                        </div>
                    </div>

                    <div class="form-grid-mixed">
                        <div class="left-col">
                            <div class="form-group">
                                <label>ISBN</label>
                                <div class="isbn-search-wrapper">
                                    <input type="text" name="ISBN" id="isbnInput" placeholder="Enter ISBN (10 or 13 digits)" required>
                                    <button type="button" id="searchIsbnBtn" class="btn-search-isbn" title="Search by ISBN">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                                <span id="isbnValidation" class="validation-message"></span>
                            </div>
                            <div class="form-group" style="margin-top: 20px;">
                                <label>Publisher</label>
                                <input type="text" name="Publisher">
                            </div>
                        </div>
                        <div class="right-col">
                            <div class="form-group h-100">
                                <label>Remarks</label>
                                <textarea name="Remarks"></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="form-grid-row">
                        <div class="form-group">
                            <label>Source Type</label>
                            <div class="select-wrapper">
                                <select name="SourceType">
                                    <option value="" disabled selected>Select</option>
                                    <option value="donation">Donation</option>
                                    <option value="purchased">Purchased</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Date Received</label>
                            <input type="text" name="DateReceived" placeholder="YYYY/MM/DD" onfocus="(this.type='date')">
                        </div>
                    </div>

                    <div class="form-grid-row">
                        <div class="form-group">
                            <label>Book Status</label>
                            <div class="select-wrapper">
                                <select name="BookStatus" required>
                                    <option value="" disabled selected>Select</option>
                                    <option value="Available">Available</option>
                                    <option value="Damaged">Damaged</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Number of Physical Copies</label>
                            <input type="number" name="TotalCopies" min="1" value="1" required>
                            <small style="color: #666; font-size: 12px; margin-top: 5px; display: block;">
                                How many duplicate copies are you adding?
                            </small>
                        </div>
                    </div>

                    <div class="form-group full-width">
                        <label>Shelf Location</label>
                        <input type="text" name="ShelfLocation">
                    </div>

                    <div class="button-area">
                        <button type="submit" class="btn btn-green">Add Books</button>
                        <button type="button" class="btn btn-purple" id="scanIsbnBtn">
                            <i class="fas fa-barcode"></i> Scan ISBN
                        </button>
                        <button type="button" class="btn btn-blue" onclick="document.getElementById('fileUpload').click()">
                            Upload an image
                        </button>
                        <input type="file" id="fileUpload" accept="image/*" style="display: none;">

                    </div>

                </form>
            </div>
        </main>
    </div>

    <div id="cameraModal" class="camera-overlay" style="display: none;">
        <div class="camera-container">
            <div class="form-group" style="width: 100%; margin-bottom: 10px;">
                <label style="color: #333; font-weight: 500;">Select Camera:</label>
                <select id="videoSource" class="select-wrapper" style="width: 100%; padding: 8px; border-radius: 5px; border: 1px solid #ccc;"></select>
            </div>

            <video id="video" autoplay playsinline></video>

            <div class="camera-controls">
                <button type="button" id="captureBtn" class="btn btn-green">Capture</button>
                <button type="button" id="closeCameraBtn" class="btn btn-red">Cancel</button>
            </div>
        </div>
    </div>

    <!-- cover page scan modal -->
    <div id="coverScanModal" class="modal-overlay" style="display: none;">
        <div class="cover-scan-container">
            <h2>Select Book Information from Cover</h2>
            <p class="instruction-text">Click on highlighted text, then choose what field it represents</p>

            <div class="cover-scan-content">
                <!-- Left: Image Preview with Highlights -->
                <div class="image-preview-section">
                    <div id="coverImageContainer" class="cover-image-wrapper">
                        <canvas id="coverCanvas"></canvas>
                    </div>
                </div>


                <!-- Right: Detected Text List -->
                <div class="detected-text-section">
                    <h3>Detected Text</h3>
                    <div id="detectedTextList" class="text-list">
                        <!-- Dynamically populated -->
                    </div>

                    <div class="modal-actions">
                        <button type="button" class="btn btn-green" id="applyFieldsBtn">Apply to Form</button>
                        <button type="button" class="btn btn-red" id="cancelCoverScanBtn">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        window.loggedInUser = @Html.Raw(Json.Serialize(User.Identity.Name ?? "Guest"));
        window.userRole = @Html.Raw(Json.Serialize(User.IsInRole("Admin") ? "Admin" : "Librarian"));
    </script>

    <script src="~/js/addbooks.js"></script>
    <script src="~/js/chatbot.js"></script>
    <script src="~/js/dashboard.js"></script>
    <script src="~/js/welcome.js"></script>
    <script src="~/js/sidebar-mobile.js"></script>
    <script src="~/js/dropdown-fix.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Logout Confirmation Modal -->
    <div id="logoutModal" style="
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 9999;
        justify-content: center;
        align-items: center;
    ">
        <div style="
            background-color: #ffffff;
            border-radius: 12px;
            padding: 40px 36px 32px;
            width: 360px;
            max-width: 90%;
            text-align: center;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
            font-family: 'Poppins', sans-serif;
        ">
            <div style="
                width: 56px;
                height: 56px;
                background-color: #fff3cd;
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                margin: 0 auto 18px;
            ">
                <i class="fas fa-sign-out-alt" style="color: #d4a017; font-size: 22px;"></i>
            </div>
            <p style="
                font-size: 18px;
                font-weight: 600;
                color: #333333;
                margin: 0 0 8px;
            ">Do you wish to logout?</p>
            <p style="
                font-size: 13px;
                color: #777777;
                margin: 0 0 24px;
            ">You will need to log in again to access the system.</p>
            <div style="
                display: flex;
                justify-content: center;
                gap: 14px;
            ">
                <button onclick="confirmLogout();" style="
                    background-color: #e74c3c;
                    color: #ffffff;
                    border: none;
                    border-radius: 6px;
                    padding: 10px 28px;
                    font-size: 14px;
                    font-weight: 600;
                    cursor: pointer;
                    font-family: 'Poppins', sans-serif;
                    transition: background-color 0.2s;
                " onmouseover="this.style.backgroundColor='#c0392b'"
                        onmouseout="this.style.backgroundColor='#e74c3c'">
                    Yes
                </button>

                <button onclick="closeLogoutModal();" style="
                    background-color: #2980b9;
                    color: #ffffff;
                    border: none;
                    border-radius: 6px;
                    padding: 10px 28px;
                    font-size: 14px;
                    font-weight: 600;
                    cursor: pointer;
                    font-family: 'Poppins', sans-serif;
                    transition: background-color 0.2s;
                " onmouseover="this.style.backgroundColor='#1a6da0'"
                        onmouseout="this.style.backgroundColor='#2980b9'">
                    No
                </button>
            </div>
        </div>
    </div>

    <script>
        function showLogoutModal() {
            document.getElementById('logoutModal').style.display = 'flex';
        }

        function closeLogoutModal() {
            document.getElementById('logoutModal').style.display = 'none';
        }

        function confirmLogout() {
            document.getElementById('logoutForm').submit();
        }

        document.getElementById('logoutModal').addEventListener('click', function (e) {
            if (e.target === this) {
                closeLogoutModal();
            }
        });
    </script>

</body>
</html>