@model Soft_eng.Models.LogBook
@{
    ViewBag.Title = "Book Details";
    Layout = null;
    var backAction = Model?.BookID > 0 ? "Logbook" : "InventoryAdmin";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Library Management System - Book Details</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/addbooks.css">
</head>
<body>

    <header class="top-header">
        <div class="logo-area">
            <div class="logo-circle">
                <img src="~/images/school_logo.jpg" alt="SIA Logo">
           </div>
            <a href="/dashboard/Dashboard" style="text-decoration: none; color: white;">
                <span class="school-name">SAINT ISIDORE ACADEMY</span>
            </a>
        </div>
    </header>

    <div class="main-layout">
        <aside class="sidebar" id="sidebar">
            <nav>
                <ul>
                    <li class="@(ViewBag.Title == "Dashboard" ? "active" : "")">
                        <a asp-controller="Dashboard" asp-action="AdminDashboard">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                    </li>

                    <li class="@(ViewBag.Title == "Inventory" ? "active" : "")">
                        <a asp-controller="Inventory" asp-action="Inventory" asp-route-fromAdmin="true">
                            <i class="fas fa-book"></i> Logbook
                        </a>
                    </li>

                    <li class="dropdown-item">
                        <a href="javascript:void(0)" class="dropdown-toggle" id="bookManagementBtnLib">
                            <i class="fas fa-layer-group"></i> Book Management
                            <i class="fas fa-chevron-down arrow-icon"></i>
                        </a>
                        <ul class="submenu" id="bookManagementSubmenuLib">
                            <li><a asp-controller="Inventory" asp-action="Addbooks"><i class="fas fa-plus"></i> Add Books</a></li>
                            <li><a asp-controller="Loan" asp-action="BorrowedBooks"><i class="fas fa-book-reader"></i> Borrowed Books</a></li>
                            <li><a asp-controller="Request" asp-action="RequestedBooks"><i class="fas fa-bookmark"></i> Requested Books</a></li>
                            <li><a asp-controller="Inventory" asp-action="ArchivedBooks"><i class="fas fa-archive"></i> Archived Books</a></li>
                        </ul>
                    </li>

                    <li class="@(ViewBag.Title == "Fine" ? "active" : "")">
                        <a asp-controller="Loan" asp-action="FineAdmin">
                            <i class="fas fa-money-bill-wave"></i> Fine
                        </a>
                    </li>

                    <li>
                        <form asp-action="Logout" asp-controller="Account" method="post" id="logoutForm" style="display:inline;">
                            <a href="javascript:void(0);" onclick="showLogoutModal();" class="logout-link">
                                <i class="fas fa-sign-out-alt"></i>
                                <span class="logout-text">Log Out</span>
                            </a>
                        </form>
                    </li>
                </ul>
            </nav>
        </aside>


        <main class="content-area">
            <h2>Book Details</h2>

            @if (Model == null)
            {
                <div class="form-card">
                    <p>Book not found.</p>
                    <div class="button-area">
                        <a asp-action="Inventory" class="btn btn-blue">Back to Logbook</a>
                    </div>
                </div>
            }
            else
            {
                <div class="form-card">
                    <form>
                        <div class="form-group full-width">
                            <label>Book Title</label>
                            <input type="text" value="@Model.BookTitle" readonly>
                        </div>

                        <div class="form-grid-row">
                            <div class="form-group">
                                <label>Author</label>
                                <input type="text" value="@(Model.Author ?? "")" readonly>
                            </div>
                            <div class="form-group">
                                <label>Pages</label>
                                <input type="text" value="@(Model.Pages?.ToString() ?? "")" readonly>
                            </div>
                        </div>

                        <div class="form-grid-row">
                            <div class="form-group">
                                <label>Edition</label>
                                <input type="text" value="@(Model.Edition ?? "")" readonly>
                            </div>
                            <div class="form-group">
                                <label>Year</label>
                                <input type="text" value="@(Model.Year?.ToString("yyyy-MM-dd") ?? "")" readonly>
                            </div>
                        </div>

                        <div class="form-grid-mixed">
                            <div class="left-col">
                                <div class="form-group">
                                    <label>ISBN</label>
                                    <input type="text" value="@Model.ISBN" readonly>
                                </div>
                                <div class="form-group" style="margin-top: 20px;">
                                    <label>Publisher</label>
                                    <input type="text" value="@(Model.Publisher ?? "")" readonly>
                                </div>
                            </div>
                            <div class="right-col">
                                <div class="form-group h-100">
                                    <label>Remarks</label>
                                    <textarea readonly>@(Model.Remarks ?? "")</textarea>
                                </div>
                            </div>
                        </div>

                        <div class="form-grid-row">
                            <div class="form-group">
                                <label>Source Type</label>
                                <input type="text" value="@(Model.SourceType ?? "")" readonly>
                            </div>
                            <div class="form-group">
                                <label>Date Received</label>
                                <input type="text" value="@(Model.DateReceived?.ToString("yyyy-MM-dd") ?? "")" readonly>
                            </div>
                        </div>

                        <div class="form-grid-row">
                            <div class="form-group">
                                <label>Book Status</label>
                                <input type="text" value="@(Model.BookStatus ?? "")" readonly>
                            </div>
                            <div class="form-group">
                                <label>Total Copies</label>
                                <input type="text" value="@Model.TotalCopies" readonly>
                            </div>
                        </div>

                        <div class="form-group full-width">
                            <label>Shelf Location</label>
                            <input type="text" value="@(Model.ShelfLocation ?? "")" readonly>
                        </div>

                        <div class="button-area">
                            @if (ViewBag.FromAdmin == true)
                            {
                                <a asp-action="InventoryAdmin" class="btn btn-blue">Back to Logbook</a>
                            }
                            else
                            {
                                <a asp-action="Inventory" class="btn btn-blue">Back to Inventory</a>
                            }
                        </div>
                    </form>
                </div>
            }
        </main>
    </div>
</body>
</html>