@{
    ViewBag.Title = "Forgot Password";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Forgot Password - Saint Isidore Academy</title>
    <link rel="stylesheet" href="~/css/forgotpassword.css" />
</head>
<body>

    <div class="login-card">

        <div class="logo-container">
            <img src="~/images/school_logo.jpg" alt="Saint Isidore Academy Logo" />
        </div>

        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
        {
            <div class="form-group">
                <label for="email">Enter your registered Email</label>
                <input type="email" id="email" name="email" required />
            </div>

            if (ViewBag.Message != null)
            {
                <p style="color: white; font-weight: bold; text-align: center;">@ViewBag.Message</p>
            }

            <div class="button-group">
                <button type="submit" class="btn btn-primary">
                    Send Verification Link
                </button>

                <a href="@Url.Action("Login", "Account")" class="btn btn-secondary">
                    Back to Login
                </a>
            </div>
        }

    </div>
</body>
</html>