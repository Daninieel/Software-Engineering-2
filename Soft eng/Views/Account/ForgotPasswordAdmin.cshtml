@{
    ViewBag.Title = "Forgot Password (Admin)";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Forgot Password - Admin</title>
    <link rel="stylesheet" href="~/css/forgotpassword.admin.css" />
</head>
<body>

    <div class="login-card">

        <div class="logo-container">
            <img src="https://cdn-icons-png.flaticon.com/512/1946/1946429.png" alt="Admin Logo" />
            <h3 style="color:white;margin-top:12px; text-align:center;">SAINT ISIDORE ACADEMY - ADMIN</h3>
        </div>

        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
        {
            <div class="form-group">
                <label for="email">Enter your registered Admin Email</label>
                <input type="email" id="email" name="email" required />
            </div>

            if (ViewBag.Message != null)
            {
                <p style="color: white; font-weight: bold; text-align: center;">@ViewBag.Message</p>
            }

            <div class="button-group">
                <button type="submit" class="btn btn-primary">
                    Send Verification Link
                </button>

                <a href="@Url.Action("Login", "Account")" class="btn btn-secondary">
                    Back to Login
                </a>
            </div>
        }

    </div>
</body>
</html>