@{
    ViewData["Title"] = "Verify Code";
}

<div class="container mt-5">
    <h2>Enter Verification Code</h2>
    <p>We sent a 6-digit code to your email. Please enter it below.</p>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-danger">@ViewBag.Message</div>
    }

    <form asp-action="VerifyCode" method="post">
        <div class="form-group">
            <label for="inputCode">Verification Code:</label>
            <input type="text" name="inputCode" class="form-control" placeholder="EX: A1B2C3" required />
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Verify</button>
    </form>
</div>
