@model Soft_eng.Models.Inventory
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/addbooks.css">
    <title>Edit Book</title>
</head>
<body>
    <main class="content-area">
        <h2>Edit Book Details</h2>

        <div class="form-card">
            <form asp-action="EditBook" method="post">
                <input type="hidden" asp-for="BookID" />
                <input type="hidden" name="isAdmin" value="@((ViewBag.FromAdmin ?? false).ToString().ToLower())" />

                <!-- BOOK TITLE -->
                <div class="form-group full-width">
                    <label>BOOK TITLE</label>
                    <input asp-for="BookTitle" required />
                </div>

                <!-- Author & Pages -->
                <div class="form-grid-row">
                    <div class="form-group">
                        <label>AUTHOR</label>
                        <input asp-for="Author" />
                    </div>
                    <div class="form-group">
                        <label>PAGES</label>
                        <input asp-for="Pages" type="number" min="1" />
                    </div>
                </div>

                <!-- Edition & Published Year -->
                <div class="form-grid-row">
                    <div class="form-group">
                        <label>EDITION</label>
                        <input asp-for="Edition"
                               placeholder="e.g. 2nd/2019"
                               pattern="^\d+(st|nd|rd|th)/\d{4}$"
                               title="Format must be like 2nd/2019"
                               required />
                    </div>

                    <div class="form-group">
                        <label>PUBLISHED YEAR</label>
                        <input asp-for="Year"
                               type="date"
                               id="PublishedYear"
                               required />
                    </div>
                </div>

                <!-- ISBN & Publisher -->
                <div class="form-grid-mixed">
                    <div class="left-col">
                        <div class="form-group">
                            <label>ISBN</label>
                            <input asp-for="ISBN"
                                   inputmode="numeric"
                                   pattern="[0-9]*"
                                   maxlength="13"
                                   oninput="this.value = this.value.replace(/[^0-9]/g, '')"
                                   required />
                        </div>

                        <div class="form-group" style="margin-top: 20px;">
                            <label>PUBLISHER</label>
                            <input asp-for="Publisher" />
                        </div>
                    </div>

                    <!-- Remarks -->
                    <div class="right-col">
                        <div class="form-group h-100">
                            <label>REMARKS</label>
                            <textarea asp-for="Remarks"></textarea>
                        </div>
                    </div>
                </div>

                <!-- SOURCE TYPE & DATE RECEIVED -->
                <div class="form-grid-row">
                    <div class="form-group">
                        <label>SOURCE TYPE</label>
                        <select asp-for="SourceType">
                            <option value="donation">Donation</option>
                            <option value="purchased">Purchased</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>DATE RECEIVED</label>
                        <input asp-for="DateReceived"
                               type="date"
                               id="DateReceived"
                               required />
                    </div>
                </div>

                <!-- BOOK STATUS & TOTAL COPIES (SWAPPED POSITION) -->
                <div class="form-grid-row">
                    <div class="form-group">
                        <label>BOOK STATUS</label>
                        <select asp-for="BookStatus">
                            <option value="Available">Available</option>
                            <option value="Borrowed">Borrowed</option>
                            <option value="Reserved">Reserved</option>
                            <option value="Lost">Lost</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>TOTAL COPIES</label>
                        <input asp-for="TotalCopies" type="number" min="1" required />
                    </div>
                </div>

                <!-- SHELF LOCATION (NOW LAST) -->
                <div class="form-group full-width">
                    <label>SHELF LOCATION</label>
                    <input asp-for="ShelfLocation" />
                </div>

                <!-- Buttons -->
                <div class="button-area">
                    <button type="submit" class="btn btn-green">Update Book</button>

                    @if (ViewBag.FromAdmin == true)
                    {
                        <a asp-action="InventoryAdmin" class="btn btn-red">Cancel</a>
                    }
                    else
                    {
                        <a asp-action="Inventory" class="btn btn-red">Cancel</a>
                    }
                </div>
            </form>
        </div>
    </main>

    <!-- Date Validation -->
    <script>
        const publishedYear = document.getElementById("PublishedYear");
        const dateReceived = document.getElementById("DateReceived");

        publishedYear.addEventListener("change", () => {
            if (publishedYear.value) {
                dateReceived.min = publishedYear.value;
            }
        });
    </script>

    <partial name="_ValidationScriptsPartial" />
</body>
</html>
