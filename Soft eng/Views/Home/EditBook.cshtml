@model Soft_eng.Models.Inventory
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/addbooks.css">
    <title>Edit Book</title>
</head>
<body>
    <main class="content-area">
        <h2>Edit Book Details</h2>
        <div class="form-card">
            <form asp-action="EditBook" method="post">
                <input type="hidden" name="BookID" value="@Model.BookID" />
                <input type="hidden" name="isAdmin" value="@((ViewBag.FromAdmin ?? false).ToString().ToLower())" />

                <div class="form-group full-width">
                    <label>Book Title</label>
                    <input type="text" name="BookTitle" value="@Model.BookTitle" required>
                </div>

                <div class="form-grid-row">
                    <div class="form-group">
                        <label>Author</label>
                        <input type="text" name="Author" value="@Model.Author">
                    </div>
                    <div class="form-group">
                        <label>Pages</label>
                        <input type="number" name="Pages" value="@Model.Pages">
                    </div>
                </div>

                <div class="form-grid-row">
                    <div class="form-group">
                        <label>Edition</label>
                        <input type="text" name="Edition" value="@Model.Edition">
                    </div>
                    <div class="form-group">
                        <label>Year</label>
                        <input type="date" name="Year" value="@Model.Year?.ToString("yyyy-MM-dd")">
                    </div>
                </div>

                <div class="form-grid-mixed">
                    <div class="left-col">
                        <div class="form-group">
                            <label>ISBN</label>
                            <input type="text" name="ISBN" value="@Model.ISBN">
                        </div>
                        <div class="form-group" style="margin-top: 20px;">
                            <label>Publisher</label>
                            <input type="text" name="Publisher" value="@Model.Publisher">
                        </div>
                    </div>
                    <div class="right-col">
                        <div class="form-group h-100">
                            <label>Remarks</label>
                            <textarea name="Remarks">@Model.Remarks</textarea>
                        </div>
                    </div>
                </div>

                <div class="form-grid-row">
                    <div class="form-group">
                        <label>Source Type</label>
                        <select name="SourceType">
                            <option value="donation" selected="@(Model.SourceType == "donation")">Donation</option>
                            <option value="purchased" selected="@(Model.SourceType == "purchased")">Purchased</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Date Received</label>
                        <input type="date" name="DateReceived" value="@Model.DateReceived?.ToString("yyyy-MM-dd")">
                    </div>
                </div>

                <div class="form-group full-width">
                    <label>Shelf Location</label>
                    <input type="text" name="ShelfLocation" value="@Model.ShelfLocation">
                </div>

                <div class="button-area">
                    <button type="submit" class="btn btn-green">Update Book</button>
                    @if (ViewBag.FromAdmin == true)
                    {
                        <a asp-action="InventoryAdmin" class="btn btn-red">Cancel</a>
                    }
                    else
                    {
                        <a asp-action="Inventory" class="btn btn-red">Cancel</a>
                    }
                </div>
            </form>
        </div>
    </main>
</body>
</html>