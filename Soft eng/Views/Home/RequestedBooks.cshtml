@model IEnumerable<Soft_eng.Models.Request>

@{
    ViewBag.Title = "RequestedBooks";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Library Management System - Requested Books</title>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <link rel="stylesheet" href="~/css/requestedbooks.css">
    <link rel="stylesheet" href="~/css/filter-dropdown.css">
    <link rel="stylesheet" href="~/css/report-modal.css">
    <link rel="stylesheet" href="~/css/chatbot.css">
    <link rel="stylesheet" href="~/css/pagination.css">
</head>
<body>

    <header class="top-header">
        <div class="logo-area">
            <div class="logo-circle">
                <img src="~/images/school_logo.jpg" alt="SIA Logo">
            </div>
            <span class="school-name">SAINT ISIDORE ACADEMY</span>
        </div>

        <div class="user-area">
            <form asp-action="Logout" asp-controller="Home" method="post" id="logoutForm">
                <a href="javascript:void(0);" onclick="document.getElementById('logoutForm').submit();" class="logout-link">
                    <span class="logout-text">Log Out</span>
                </a>
            </form>
            <div class="user-avatar">
                <img src="https://cdn-icons-png.flaticon.com/512/6858/6858504.png" alt="User Avatar">
            </div>
        </div>
    </header>

    <div class="main-layout">
        <aside class="sidebar">
            <nav>
                <ul>
                    <li><a asp-action="Dashboard">Dashboard</a></li>
                    <li><a asp-action="Inventory">Inventory</a></li>
                    <li><a asp-action="AddBooks">Add Books</a></li>
                    <li><a asp-action="BorrowedBooks">Borrowed Books</a></li>
                    <li class="active"><a asp-action="RequestedBooks">Requested Books</a></li>
                    <li><a asp-action="Fine">Fine</a></li>
                </ul>
            </nav>
        </aside>

        <main class="content-area">
            <h2>Requested Books</h2>

            <div class="search-filter">
                <input type="text" placeholder="Search by Title, Borrower, etc.">
                <div class="filter-dropdown">
                    <button type="button" class="btn-filter filter-btn">Filter</button>
                    <div class="filter-options">
                        <div class="filter-option">Available</div>
                        <div class="filter-option">Borrowed</div>
                        <div class="filter-option">Damaged</div>
                        <div class="filter-option">Missing/Lost</div>
                        <div class="filter-option">Author</div>
                        <div class="filter-option">Title</div>
                        <div class="filter-option">Publisher</div>
                        <div class="filter-option">Donation</div>
                        <div class="filter-option">Year</div>
                        <div class="filter-option">Category</div>
                        <div class="filter-option">Shelf Location</div>
                    </div>
                </div>
            </div>
            <div class="table-card">
                <div class="table-wrapper">
                    <table id="requestsTable">
                        <thead>
                            <tr>
                                <th>Request ID</th>
                                <th>Requester Name</th>
                                <th>Requested Title</th>
                                <th>Date Requested</th>
                                <th>Status</th>
                                <th>Remarks</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var req in Model)
                            {
                                <tr class="request-row"
                                    data-id="@req.RequestID"
                                    data-name="@req.RequesterName"
                                    data-title="@req.RequestedTitle"
                                    data-date="@req.DateRequested.ToString("yyyy-MM-dd")"
                                    data-status="@req.Status"
                                    data-remarks="@(req.Remarks ?? "")">

                                    <td>@req.RequestID</td>
                                    <td>@req.RequesterName</td>
                                    <td>@req.RequestedTitle</td>
                                    <td>@req.DateRequested.ToString("yyyy-MM-dd")</td>
                                    <td>@req.Status</td>
                                    <td>
                                        <button class="btn-see-more"
                                                onclick='openViewRequestModal(
                                            @req.RequestID,
                                            @Html.Raw(Json.Serialize(req.RequesterName)),
                                            @Html.Raw(Json.Serialize(req.RequestedTitle)),
                                            "@req.DateRequested.ToString("yyyy-MM-dd")",
                                            @Html.Raw(Json.Serialize(req.Status)),
                                            @Html.Raw(Json.Serialize(req.Remarks ?? ""))
                                        )'>
                                            See More
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>



            <div class="pagination-section" style="display: flex; justify-content: center; margin: 20px 0;">
                <div class="pagination-wrapper">
                    <a href="#" class="nav-arrow">&lt;</a>

                    <ul class="page-list">
                        <li><a href="#" class="page-link active">1</a></li>
                    </ul>

                    <a href="#" class="nav-arrow">&gt;</a>

                    <div class="goto-container">
                        <span class="goto-text">Go to</span>
                        <input type="text" class="goto-input">
                        <span class="goto-text">Page</span>
                    </div>
                </div>
            </div>

            <div class="button-area">
                <button class="btn btn-blue" id="addRequestBtn">Add Request</button>
                <button class="btn btn-green" id="generateReportBtn">Generate Report</button>
                <button class="btn btn-red" onclick="openEditRequest()">Edit Request</button>
            </div>
        </main>
    </div>

    <div id="addRequestModal" class="modal">
        <div class="modal-content">
            <h2>New Book Request</h2>
            <p>Input the details of the book requested</p>
            <form asp-action="AddRequest" asp-controller="Home" method="post">
                <label>Requester Name</label>
                <input type="text" name="RequesterName" required>
                <label>Book Title</label>
                <input type="text" name="RequestedTitle" required>
                <label>Date Requested</label>
                <input type="date" name="DateRequested" required>
                <label>Remarks</label>
                <textarea name="Remarks"></textarea>
                <div class="modal-actions">
                    <button type="button" class="btn btn-red" id="cancelRequestBtn">Cancel</button>
                    <button type="submit" class="btn btn-blue">Add</button>
                </div>
            </form>
        </div>
    </div>

    <div id="viewRequestModal" class="modal">
        <div class="modal-content">
            <h2>Request Details</h2>
            <p><strong>Request ID:</strong> <span id="viewRequestID"></span></p>
            <p><strong>Requester Name:</strong> <span id="viewRequesterName"></span></p>
            <p><strong>Requested Title:</strong> <span id="viewRequestedTitle"></span></p>
            <p><strong>Date Requested:</strong> <span id="viewDateRequested"></span></p>
            <p><strong>Status:</strong> <span id="viewStatus"></span></p>
            <label><strong>Remarks</strong></label>
            <textarea id="viewRemarks" readonly></textarea>
            <div class="modal-actions">
                <button class="btn btn-red" onclick="closeViewRequestModal()">Close</button>
            </div>
        </div>
    </div>

    <div id="editRequestModal" class="modal">
        <div class="modal-content">
            <h2>Edit Request</h2>
            <form asp-action="EditRequest" asp-controller="Home" method="post">
                <input type="hidden" name="RequestID" id="editRequestID" />
                <label>Requester Name</label>
                <input type="text" name="RequesterName" id="editRequesterName" required />
                <label>Requested Title</label>
                <input type="text" name="RequestedTitle" id="editRequestedTitle" required />
                <label>Date Requested</label>
                <input type="date" name="DateRequested" id="editDateRequested" required />
                <label>Status</label>
                <input type="text" id="editStatus" readonly style="background-color: #f0f0f0;" />
                <label>Remarks</label>
                <textarea name="Remarks" id="editRemarks"></textarea>
                <div class="modal-actions">
                    <button type="button" class="btn btn-red" onclick="closeEditModal()">Cancel</button>
                    <button type="submit" class="btn btn-blue">Save Changes</button>
                </div>
            </form>
        </div>
    </div>

    <div id="reportModal" class="report-modal" style="display:none;">
        <div class="report-modal-content">
            <button id="closeReportModal" class="close-report-modal">&times;</button>
            <h2>Select Report Format</h2>
            <p>Choose the format for your report:</p>
            <div class="report-format-buttons">
                <button class="report-format-btn pdf" data-format="pdf">
                    <i class="fas fa-file-pdf"></i> PDF
                </button>
                <button class="report-format-btn csv" data-format="csv">
                    <i class="fas fa-file-csv"></i> CSV
                </button>
            </div>
        </div>
    </div>

    <script src="~/js/dashboard.js"></script>
    <script src="~/js/reportGeneration.js"></script>
    <script src="~/js/chatbot.js"></script>
    <script src="~/js/request.js"></script>
</body>
</html>