@model List<Soft_eng.Models.LogBook>
@{
    ViewBag.Title = "Inventory (Admin)";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Library Inventory</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/inventory.admin.css">
    <link rel="stylesheet" href="~/css/filter-dropdown.css">
    <link rel="stylesheet" href="~/css/chatbot.css">
    <link rel="stylesheet" href="~/css/pagination.css">
</head>
<body>
    <header class="top-header admin">
        <div class="logo-area">
            <div class="logo-circle"><img src="~/images/school_logo.jpg" alt="SIA Logo"></div>
            <span class="school-name">SAINT ISIDORE ACADEMY</span>
        </div>
        <div class="user-area">
            <form asp-action="Logout" asp-controller="Home" method="post" id="logoutForm" style="display:inline;">
                <a href="javascript:void(0);" onclick="document.getElementById('logoutForm').submit();" class="logout-link">
                    <span class="logout-text">Log Out</span>
                </a>
            </form>
            <div class="user-avatar admin-avatar"><img src="https://cdn-icons-png.flaticon.com/512/1946/1946429.png" alt="Admin Avatar"></div>
        </div>
    </header>

    <div class="main-layout">
        <aside class="sidebar admin">
            <nav>
                <ul>
                    <li><a asp-action="AdminDashboard">Dashboard</a></li>
                    <li class="active"><a asp-action="InventoryAdmin">Inventory</a></li>
                    <li><a asp-action="AddBooksAdmin">Add Books</a></li>
                    <li><a asp-action="BorrowedBooksAdmin">Borrowed Books</a></li>
                    <li><a asp-action="RequestedBooksAdmin">Requested Books</a></li>
                    <li><a asp-action="FineAdmin">Fine</a></li>

                </ul>
            </nav>
        </aside>

        <main class="content-area">
            <h2>Admin Inventory</h2>
            <div class="search-filter">
                <input type="text" id="searchInput" placeholder="Search by Title, Author, etc.">
                <div class="filter-dropdown">
                    <button type="button" class="btn-filter filter-btn">Filter</button>
                    <div class="filter-options">
                        <div class="filter-option" data-filter="all">All Books</div>
                        <div class="filter-option" data-filter="status" data-value="Available">Available</div>
                        <div class="filter-option" data-filter="status" data-value="Damaged">Damaged</div>
                        <div class="filter-option" data-filter="status" data-value="Missing">Missing</div>
                        <hr>
                        <div class="filter-option" data-filter="sort" data-value="title">Sort by Title</div>
                        <div class="filter-option" data-filter="sort" data-value="author">Sort by Author</div>
                        <div class="filter-option" data-filter="sort" data-value="shelf">Sort by Shelf Location</div>
                    </div>
                </div>
            </div>

            <div class="table-card">
                <table id="inventoryTable">
                    <thead>
                        <tr>
                            <th>Book ID</th>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Shelf Location</th>
                            <th>Availability</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="book-row">
                                <td>
                                    <input type="radio" name="selectedBook" value="@item.BookID" hidden>
                                    @item.BookID
                                </td>
                                <td class="title-cell">@item.BookTitle</td>
                                <td class="author-cell">@item.Author</td>
                                <td class="shelf-cell">@item.ShelfLocation</td>
                                <td class="status-cell">@item.Availability</td>
                                <td><a asp-action="BookDetails" asp-route-id="@item.BookID" asp-route-fromAdmin="false" class="btn-see-more">See more</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="pagination-section" style="display: flex; justify-content: center; margin: 20px 0;">
                <div class="pagination-wrapper">
                    <a href="#" class="nav-arrow">&lt;</a>

                    <ul class="page-list">
                        <li><a href="#" class="page-link active">1</a></li>
                        <li><a href="#" class="page-link">2</a></li>
                        <li><a href="#" class="page-link">3</a></li>
                        <li><a href="#" class="page-link">4</a></li>
                        <li><a href="#" class="page-link">5</a></li>
                        <li><span class="dots">...</span></li>
                        <li><a href="#" class="page-link">14</a></li>
                    </ul>

                    <a href="#" class="nav-arrow">&gt;</a>

                    <div class="goto-container">
                        <span class="goto-text">Go to</span>
                        <input type="text" class="goto-input">
                        <span class="goto-text">Page</span>
                    </div>
                </div>
            </div>

            <div class="button-area">
                <a asp-action="AddBooksAdmin" class="btn btn-blue">Add Books</a>
                <button type="button" id="adminEditBtn" class="btn btn-red">Edit Book</button>
            </div>
        </main>
    </div>

    <script src="~/js/inventory.js"></script>
    <script src="~/js/chatbot.js"></script>
</body>
</html>