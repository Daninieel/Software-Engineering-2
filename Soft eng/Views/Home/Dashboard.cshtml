@{
    ViewBag.Title = "Admin Dashboard";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Saint Isidore Academy</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/dashboard.admin.css">
</head>
<body>

    <header class="top-header admin">
        <div class="logo-area">
            <button class="hamburger-btn" id="hamburgerBtn">
                <span></span>
                <span></span>
                <span></span>
            </button>
            <div class="logo-circle">
                <img src="~/images/school_logo.jpg" alt="Logo">
            </div>
            <span class="school-name">SAINT ISIDORE ACADEMY</span>
        </div>

        <div class="user-area">
            <form asp-action="Logout" asp-controller="Home" method="post" id="logoutForm" style="display:inline;">
                <a href="javascript:void(0);" onclick="document.getElementById('logoutForm').submit();" class="logout-link">
                    <span class="logout-text">Log Out</span>
                </a>
            </form>
            <div class="user-avatar admin-avatar">
                <img src="https://cdn-icons-png.flaticon.com/512/6858/6858504.png" alt="User Avatar">
            </div>
        </div>
    </header>

    <div class="main-layout">
        <aside class="sidebar" id="sidebar">
            <nav>
                <ul>
                    <li class="active"><a asp-action="Dashboard">Dashboard</a></li>
                    <li><a asp-action="Inventory">Inventory</a></li>
                    <li><a asp-action="AddBooks">Add Books</a></li>
                    <li><a asp-action="BorrowedBooks">Borrowed Books</a></li>
                    <li><a asp-action="RequestedBooks">Requested Books</a></li>
                    <li><a asp-action="Fine">Fine</a></li>
                    <li><a href="#">AI Chatbot</a></li>
                </ul>
            </nav>
        </aside>

        <main class="content-area">
            <h2>Dashboard</h2>

            <div class="dashboard-header">
                <div class="search-filter-container">
                    <input type="text" class="search-box" placeholder="Search by Title, Author, etc.">
                    <select class="time-filter">
                        <option>1 Month</option>
                    </select>
                    <div class="filter-dropdown">
                        <button type="button" class="filter-btn" id="filterBtn">Filter</button>
                        <div class="filter-options" id="filterOptions">
                            <div class="filter-option">Available</div>
                            <div class="filter-option">Borrowed</div>
                            <div class="filter-option">Damaged</div>
                            <div class="filter-option">Missing/Lost</div>
                            <div class="filter-option">Author</div>
                            <div class="filter-option">Title</div>
                            <div class="filter-option">Publisher</div>
                            <div class="filter-option">Donation</div>
                            <div class="filter-option">Year</div>
                            <div class="filter-option">Category</div>
                            <div class="filter-option">Shelf Location</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="stats-container">
                <!-- Row 1: Total Books Box - Full width -->
                <div class="row-1">
                    <div class="total-books-box">
                        <div class="total-books-label">Total Books</div>
                        <div class="total-books-value">0</div>
                    </div>
                </div>

                <!-- Row 2: 3 boxes for Borrowed Books stats - Full width -->
                <div class="row-2">
                    <div class="stat-box">
                        <div class="stat-label">Borrowed Books</div>
                        <div class="stat-value">0</div>
                    </div>
                    <div class="stat-box">
                        <div class="stat-label">Returned Books</div>
                        <div class="stat-value">0</div>
                    </div>
                    <div class="stat-box">
                        <div class="stat-label">Overdue Books</div>
                        <div class="stat-value">0</div>
                    </div>
                </div>

                <!-- Row 3: 3 boxes for Missing Books stats - Full width -->
                <div class="row-3">
                    <div class="stat-box">
                        <div class="stat-label">Missing Books</div>
                        <div class="stat-value">0</div>
                    </div>
                    <div class="stat-box">
                        <div class="stat-label">Damaged Books</div>
                        <div class="stat-value">0</div>
                    </div>
                    <div class="stat-box">
                        <div class="stat-label">Total Fine</div>
                        <div class="stat-value">P0</div>
                    </div>
                </div>

                <!-- Row 4: 2 column box - Decreased height, same width -->
                <div class="row-4">
                    <div class="table-card">
                        <h3>Overdue History</h3>
                        <div class="table-container">
                            <table>
                                <thead>
                                    <tr>
                                        <th>UserID</th>
                                        <th>Name</th>
                                        <th>Date Borrowed</th>
                                        <th>Fine</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td colspan="5" class="no-data">No overdue records</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="table-card">
                        <h3>Recent Borrowed Books</h3>
                        <div class="table-container">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="no-data">No recent borrowed books</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script src="~/js/dashboard.js"></script>
    <script src="~/js/sidebar-mobile.js"></script>

</body>
</html>