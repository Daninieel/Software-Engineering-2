@{
    ViewBag.Title = "Reset Password";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reset Password - Saint Isidore Academy</title>
    <link rel="stylesheet" href="~/css/resetpassword.css" />
</head>
<body>

    <div class="login-card">

        <div class="logo-container">
            <img src="~/images/school_logo.jpg" alt="Saint Isidore Academy Logo" />
        </div>

        @using (Html.BeginForm("ResetPassword", "Home", FormMethod.Post))
        {
            <input type="hidden" name="token" value="@ViewBag.Token" />

            <div class="form-group">
                <label for="newPassword">New Password</label>
                <input type="password" id="newPassword" name="newPassword" required />
            </div>

            <div class="form-group">
                <label for="confirmPassword">Confirm New Password</label>
                <input type="password" id="confirmPassword" name="confirmPassword" required />
            </div>

            if (ViewBag.Message != null)
            {
                <p style="color: red; text-align: center;">@ViewBag.Message</p>
            }

            <button type="submit" class="btn-login">Update Password</button>
        }

    </div>
</body>
</html>