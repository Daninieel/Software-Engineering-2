@{
    ViewBag.Title = "Reset Password";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reset Password - Saint Isidore Academy</title>
    <link rel="stylesheet" href="~/css/resetpassword.css" />
</head>
<body>

    <div class="login-card">

        <div class="logo-container">
            <img src="~/images/school_logo.jpg" alt="Saint Isidore Academy Logo" />
        </div>

        @using (Html.BeginForm("ResetPassword", "Home", FormMethod.Post))
        {
            <input type="hidden" name="token" value="@ViewBag.Token" />

            <div class="form-group">
                <label for="newPassword">New Password</label>
                <div class="password-wrap" style="display:flex;align-items:center;gap:8px;">
                    <input type="password" id="newPassword" name="newPassword" required />
                    <button type="button" class="toggle-password" data-target="newPassword" aria-label="Toggle password visibility" style="background:none;border:none;padding:4px;">
                        <svg class="icon-eye" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8S1 12 1 12z"></path><circle cx="12" cy="12" r="3"></circle></svg>
                        <svg class="icon-eye-off" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display:none"><path d="M17.94 17.94A10.94 10.94 0 0 1 12 20c-7 0-11-8-11-8a21.42 21.42 0 0 1 5-5.94"></path><path d="M1 1l22 22"></path></svg>
                    </button>
                </div>
            </div>

            <div class="form-group">
                <label for="confirmPassword">Confirm New Password</label>
                <div class="password-wrap" style="display:flex;align-items:center;gap:8px;">
                    <input type="password" id="confirmPassword" name="confirmPassword" required />
                    <button type="button" class="toggle-password" data-target="confirmPassword" aria-label="Toggle password visibility" style="background:none;border:none;padding:4px;">
                        <svg class="icon-eye" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8S1 12 1 12z"></path><circle cx="12" cy="12" r="3"></circle></svg>
                        <svg class="icon-eye-off" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display:none"><path d="M17.94 17.94A10.94 10.94 0 0 1 12 20c-7 0-11-8-11-8a21.42 21.42 0 0 1 5-5.94"></path><path d="M1 1l22 22"></path></svg>
                    </button>
                </div>
            </div>

            if (ViewBag.Message != null)
            {
                <p style="color: red; text-align: center;">@ViewBag.Message</p>
            }

            <button type="submit" class="btn-login">Update Password</button>
        }

    </div>

    <script src="~/js/Resetpassword.js"></script>
    <script src="~/js/passwordToggle.js"></script>
</body>
</html>