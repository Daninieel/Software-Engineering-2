@{
    ViewData["Title"] = "Email Verification";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    @if (ViewBag.IsSuccess == true)
                    {
                        <i class="fas fa-check-circle text-success" style="font-size: 48px;"></i>
                        <h3 class="mt-3">Success!</h3>
                    }
                    else
                    {
                        <i class="fas fa-times-circle text-danger" style="font-size: 48px;"></i>
                        <h3 class="mt-3">Verification Failed</h3>
                    }
                    <p class="mt-3">@ViewBag.Message</p>
                    @if (ViewBag.IsSuccess == true)
                    {
                        <a href="@Url.Action("Login", "Home")" class="btn btn-primary mt-3">Go to Login</a>
                    }
                    else
                    {
                        <a href="@Url.Action("Register", "Home")" class="btn btn-primary mt-3">Register Again</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>