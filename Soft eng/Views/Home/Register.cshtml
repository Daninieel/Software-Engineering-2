@{
    ViewBag.Title = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register - Saint Isidore Academy</title>

    <link rel="stylesheet" href="~/css/register.css" />
</head>
<body>

    <div class="login-card">

        <div class="logo-container">
            <img src="~/images/school_logo.jpg" alt="Saint Isidore Academy Logo" />
            <h3>Create Account</h3>
        </div>

        @using (Html.BeginForm("Register", "Home", FormMethod.Post, new { id = "registerForm" }))
        {
            <div class="form-group">
                <label for="fullname">Full Name</label>
                <input type="text" id="fullname" name="fullname" placeholder="e.g. Juan Dela Cruz" required />
            </div>

            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" placeholder="student@saintisidore.edu" required />
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required />
            </div>

            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" id="confirmPassword" name="confirmPassword" required />
            </div>

            <button type="submit" class="btn-login" id="registerBtn">Sign Up</button>

            <div class="account-link">
                <span>Already have an account?</span>
                <a href="@Url.Action("Login", "Home")">Log In here</a>
            </div>
        }

    </div>

    <script src="~/js/register.js"></script>

</body>
</html>