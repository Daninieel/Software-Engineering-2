@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Saint Isidore Academy</title>
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>

    <div class="login-card">
        <div class="logo-container">
            <img src="~/images/school_logo.jpg" alt="Saint Isidore Academy Logo" />
        </div>

        <form id="loginForm">
            <div class="form-group">
                <label for="username">Email</label>
                <input type="text" id="username" name="username" />
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" />
                <a href="@Url.Action("Forgotpassword", "Home")" class="forgot-password">Forgot Password?</a>
            </div>

            <button type="button" class="btn-login" id="loginBtn">Log In</button>

            <div class="footer-text">
                <span>Don't have an account?</span>
                <a href="@Url.Action("Register", "Home")">Create Account</a>
            </div>
        </form>
    </div>

    <script src="~/js/login.js"></script>
</body>
</html>