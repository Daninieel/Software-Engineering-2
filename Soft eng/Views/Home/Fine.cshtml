@{
    ViewBag.Title = "Fine";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Library Management System - Add Book</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/fine.css">
    <link rel="stylesheet" href="~/css/filter-dropdown.css">
    <link rel="stylesheet" href="~/css/report-modal.css">
    <link rel="stylesheet" href="~/css/chatbot.css">
    <link rel="stylesheet" href="~/css/pagination.css">
    <link rel="stylesheet" href="~/css/mobile.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <header class="top-header">
        <div class="logo-area">
            <button class="hamburger-btn" id="hamburgerBtn">
                <span></span>
                <span></span>
                <span></span>
            </button>
            <div class="logo-circle">
                <img src="~/images/school_logo.jpg" alt="SIA Logo">
            </div>
            <span class="school-name">SAINT ISIDORE ACADEMY</span>
        </div>

        <div class="user-area">
            <div class="welcome-text" id="welcomeText"></div>
            <div class="user-avatar admin-avatar">
                <img src="https://cdn-icons-png.flaticon.com/512/6858/6858504.png" alt="User Avatar">
            </div>
        </div>
    </header>


    <div class="main-layout">
        <aside class="sidebar" id="sidebar">
            <nav>
                <ul>
                    <li class="@(ViewBag.Title == "Dashboard" ? "active" : "")">
                        <a asp-action="Dashboard">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                    </li>

                    <li class="@(ViewBag.Title == "Inventory" ? "active" : "")">
                        <a asp-action="Inventory">
                            <i class="fas fa-book"></i> Logbook
                        </a>
                    </li>

                    <li class="dropdown-item">
                        <a href="javascript:void(0)" class="dropdown-toggle" id="bookManagementBtnLib">
                            <i class="fas fa-layer-group"></i> Book Management
                            <i class="fas fa-chevron-down arrow-icon"></i>
                        </a>
                        <ul class="submenu" id="bookManagementSubmenuLib">
                            <li><a asp-action="AddBooks"><i class="fas fa-plus"></i> Add Books</a></li>
                            <li><a asp-action="BorrowedBooks"><i class="fas fa-book-reader"></i> Borrowed Books</a></li>
                            <li><a asp-action="RequestedBooks"><i class="fas fa-bookmark"></i> Requested Books</a></li>
                            <li><a asp-action="ArchivedBooks"><i class="fas fa-archive"></i> Archived Books</a></li>
                        </ul>
                    </li>

                    <li class="@(ViewBag.Title == "Fine" ? "active" : "")">
                        <a asp-action="Fine">
                            <i class="fas fa-money-bill-wave"></i> Fine
                        </a>
                    </li>
                    <li>
                        <form asp-action="Logout" asp-controller="Home" method="post" id="logoutForm" style="display:inline;">
                            <a href="javascript:void(0);" onclick="showLogoutModal();" class="logout-link">
                                <i class="fas fa-sign-out-alt"></i>
                                <span class="logout-text">Log Out</span>
                            </a>
                        </form>
                    </li>


                </ul>
            </nav>
        </aside>
        <div class="sidebar-overlay" id="sidebarOverlay"></div>

        <main class="content-area page-content">
            <h2>Fine</h2>
            <div class="search-filter">
                <input type="text" id="fineSearch" placeholder="Search by Title or Borrower Name...">
            </div>

            <div class="table-card">
                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th>Fine ID</th>
                                <th>Loan ID</th>
                                <th>Borrower Name</th>
                                <th>Status</th>
                                <th>Amount</th>
                                <th>Date Paid</th>
                            </tr>
                        </thead>
                        <tbody id="fineTableBody"></tbody>
                    </table>
                </div>
            </div>

            <div class="pagination-section" style="display: flex; justify-content: center; margin: 20px 0;">
                <div class="pagination-wrapper">
                    <a href="#" class="nav-arrow" id="prevBtn">&lt;</a>

                    <ul class="page-list">
                    </ul>

                    <a href="#" class="nav-arrow" id="nextBtn">&gt;</a>

                    <div class="goto-container">
                        <span class="goto-text">Go to</span>
                        <input type="text" class="goto-input">
                        <span class="goto-text">Page</span>
                    </div>
                </div>
            </div>

            <div class="total-container mb-3">
                <h4>Grand Total of All Fines: <span id="grandTotalDisplay">₱0.00</span></h4>
            </div>

            <div class="button-area">
                <button class="btn btn-green" id="openReportModal">Generate Report</button>
                <button class="btn btn-red" id="editFineBtn">Edit Fine</button>
            </div>
        </main>
    </div>

    <!-- Report Modal -->
    <div id="reportModal" class="report-modal" style="display:none;">
        <div class="report-modal-content">
            <button id="closeReportModal" class="close-report-modal">&times;</button>
            <h2>Select Report Format</h2>
            <p>Choose the format for your report:</p>
            <div class="report-format-buttons">
                <button class="report-format-btn pdf" data-format="pdf">
                    <i class="fas fa-file-pdf"></i> PDF
                </button>
                <button class="report-format-btn csv" data-format="csv">
                    <i class="fas fa-file-csv"></i> CSV
                </button>
            </div>
        </div>
    </div>

    <!-- Fine Details Modal -->
    <div id="fineDetailsModal" class="report-modal">
        <div class="report-modal-content" style="max-width: 600px; text-align: left;">
            <span class="close-report-modal" onclick="closeFineModal()">&times;</span>
            <h2 style="text-align: center; margin-bottom: 20px;">Fine Details</h2>

            <form id="editFineForm">
                <input type="hidden" id="detailFineID" name="FineID">

                <div class="form-row" style="display: flex; gap: 15px; margin-bottom: 15px;">
                    <div class="detail-group" style="flex: 1;">
                        <label class="detail-label">Borrower Name</label>
                        <input type="text" id="detailBorrowerName" class="detail-input" disabled>
                    </div>
                    <div class="detail-group" style="flex: 1;">
                        <label class="detail-label">Loan ID</label>
                        <input type="text" id="detailLoanID" class="detail-input" disabled>
                    </div>
                </div>

                <div class="form-row" style="display: flex; gap: 15px; margin-bottom: 15px;">
                    <div class="detail-group" style="flex: 1;">
                        <label class="detail-label">Payment Status</label>
                        <select id="detailPaymentStatus" name="PaymentStatus" class="detail-select" disabled>
                            <option value="Unpaid">Unpaid</option>
                            <option value="Paid">Paid</option>
                        </select>
                    </div>
                    <div class="detail-group" style="flex: 1;">
                        <label class="detail-label">Daily Fine</label>
                        <input type="number" id="detailFineAmount" name="FineAmount" step="0.01" class="detail-input" disabled>
                    </div>
                </div>

                <div class="form-row" style="margin-bottom: 25px;">
                    <div class="detail-group" style="width: 100%;">
                        <label class="detail-label">Date Paid</label>
                        <input type="date" id="detailDatePaid" name="DatePaid" class="detail-input" disabled>
                    </div>
                </div>

                <div class="button-area" style="display: flex; justify-content: center; gap: 15px;">
                    <button type="button" class="btn btn-blue" id="btnEditToggle">Edit</button>
                    <button type="button" class="btn btn-red" onclick="closeFineModal()">Back</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Logout Confirmation Modal -->
    <div id="logoutModal" style="
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 9999;
        justify-content: center;
        align-items: center;
    ">
        <div style="
            background-color: #ffffff;
            border-radius: 12px;
            padding: 40px 36px 32px;
            width: 360px;
            max-width: 90%;
            text-align: center;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
            font-family: 'Poppins', sans-serif;
        ">
            <div style="
                width: 56px;
                height: 56px;
                background-color: #fff3cd;
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                margin: 0 auto 18px;
            ">
                <i class="fas fa-sign-out-alt" style="color: #d4a017; font-size: 22px;"></i>
            </div>
            <p style="
                font-size: 18px;
                font-weight: 600;
                color: #333333;
                margin: 0 0 8px;
            ">Do you wish to logout?</p>
            <p style="
                font-size: 13px;
                color: #777777;
                margin: 0 0 24px;
            ">You will need to log in again to access the system.</p>
            <div style="
                display: flex;
                justify-content: center;
                gap: 14px;
            ">
                <button onclick="confirmLogout();" style="
                    background-color: #e74c3c;
                    color: #ffffff;
                    border: none;
                    border-radius: 6px;
                    padding: 10px 28px;
                    font-size: 14px;
                    font-weight: 600;
                    cursor: pointer;
                    font-family: 'Poppins', sans-serif;
                    transition: background-color 0.2s;
                " onmouseover="this.style.backgroundColor='#c0392b'"
                        onmouseout="this.style.backgroundColor='#e74c3c'">
                    Yes
                </button>

                <button onclick="closeLogoutModal();" style="
                    background-color: #2980b9;
                    color: #ffffff;
                    border: none;
                    border-radius: 6px;
                    padding: 10px 28px;
                    font-size: 14px;
                    font-weight: 600;
                    cursor: pointer;
                    font-family: 'Poppins', sans-serif;
                    transition: background-color 0.2s;
                " onmouseover="this.style.backgroundColor='#1a6da0'"
                        onmouseout="this.style.backgroundColor='#2980b9'">
                    No
                </button>
            </div>
        </div>
    </div>

    <script>
        window.loggedInUser = @Html.Raw(Json.Serialize(User.Identity.Name ?? "Guest"));
        window.userRole = @Html.Raw(Json.Serialize(User.IsInRole("Admin") ? "Admin" : "Librarian"));
    </script>

    <script src="~/js/dashboard.js"></script>
    <script src="~/js/reportGeneration.js"></script>
    <script src="~/js/chatbot.js"></script>
    <script src="~/js/fine.js"></script>
    <script src="~/js/welcome.js"></script>
    <script src="~/js/sidebar-mobile.js"></script>
    <script src="~/js/dropdown-fix.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        function showLogoutModal() {
            document.getElementById('logoutModal').style.display = 'flex';
        }

        function closeLogoutModal() {
            document.getElementById('logoutModal').style.display = 'none';
        }

        function confirmLogout() {
            document.getElementById('logoutForm').submit();
        }

        document.getElementById('logoutModal').addEventListener('click', function (e) {
            if (e.target === this) {
                closeLogoutModal();
            }
        });
    </script>

</body>
</html>
